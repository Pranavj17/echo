# Load Nix shell environment
use nix

# Load environment variables from .env if it exists
dotenv_if_exists

# Database configuration (Docker on port 5433 to avoid conflicts)
export DB_HOST=localhost
export DB_USER=echo_org
export DB_PASSWORD=postgres
export DB_PORT=5433
export DB_NAME=echo_org
export DB_POOL_SIZE=5

# Redis configuration (Docker on port 6383 to avoid conflicts)
export REDIS_HOST=localhost
export REDIS_PORT=6383

# Agent configuration
export AUTONOMOUS_BUDGET_LIMIT=1000000

# Mix environment
export MIX_ENV=dev

echo "âœ“ ECHO environment loaded"
